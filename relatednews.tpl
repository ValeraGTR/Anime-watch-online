<!-- short__story -->
<article class="short__story col__xs-6 col__sm-4 col__lg-3 col__lgx-2">
	<div class="short__story-inner ">
	<header class="short__story-header">
	  <div class="short__story-image">
	  	<figure class="grid__item-wrap">
            <img class="grid__item-img" src="[xfvalue_image_url_poster]" alt="{title}" />
            <a href="{link}" class="short__story-btn"><span class="md__icon md-plays"></span></a>
          </figure>
	  	[xfgiven_serija]<div class="label label__rate">[xfvalue_serija]</div>[/xfgiven_serija]
	  	[xfgiven_year]<div class="label label__pg">[xfvalue_year]</div>[/xfgiven_year]
	  </div>
	  <div class="shadow" style="background-image: url('[xfvalue_image_url_poster]');"></div>
	</header>
	<footer class="short__story-footer grid__item-title">
		<div class="short__story-title">{title}</div>
	</footer>
	</div>
</article><!-- end short__story -->
